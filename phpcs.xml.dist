<?xml version="1.0"?>
<ruleset name="PSR2Mod">
  <description>PSR2 standard minus class property/method underscore restrictions.</description>

  <file>src</file>
  <file>tests</file>

  <rule ref="PSR2">
    <exclude name="PSR2.Classes.PropertyDeclaration.Underscore" />
    <exclude name="PSR2.Methods.MethodDeclaration.Underscore" />
  </rule>
</ruleset>